```python
import pandas as pd

def carregar_dados(arquivo_csv):
    """Carrega o arquivo CSV e retorna um DataFrame."""
    try:
        df = pd.read_csv(arquivo_csv)
        return df
    except FileNotFoundError:
        print("âŒ Arquivo nÃ£o encontrado. Verifique o caminho e tente novamente.")
        return None

def total_vendas_por_vendedor(df):
    """Calcula o total de vendas por vendedor."""
    return df.groupby("vendedor")["valor"].sum()

def produto_mais_vendido(df):
    """Retorna o produto mais vendido."""
    return df.groupby("produto")["quantidade"].sum().idxmax()

def media_diaria_vendas(df):
    """Calcula a mÃ©dia diÃ¡ria de vendas."""
    vendas_diarias = df.groupby("data")["valor"].sum()
    return vendas_diarias.mean()

def exibir_relatorio(df):
    """Exibe os resultados de forma organizada."""
    print("\nğŸ“Š RELATÃ“RIO DE VENDAS ğŸ“Š")
    print("-" * 40)
    print("\nğŸ’¼ Total de vendas por vendedor:")
    print(total_vendas_por_vendedor(df))
    print(f"\nğŸ† Produto mais vendido: {produto_mais_vendido(df)}")
    print(f"\nğŸ“… MÃ©dia diÃ¡ria de vendas: R$ {media_diaria_vendas(df):.2f}")

if __name__ == "__main__":
    caminho = input("Informe o caminho do arquivo CSV: ")
    dados = carregar_dados(caminho)

    if dados is not None:
        exibir_relatorio(dados)
